<div class="jumbotron">
    <h1 class="display-4">Siliconera Scrapper</h1>
    <p class="lead">A website that scrapes the current articles from Siliconera.com</p>
    <button class="btn btn-outline-success scrapeBtn" type="button">Scrape Articles</button>
    <button class="btn btn-outline-success removeBtn" type="button">Remove Articles</button>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Comments</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

                <div id="articleComments"></div>

                <form>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Comment:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary submitBtn" data-dismiss="modal">Submit</button>
            </div>
        </div>
    </div>
</div>

<div class=" container articleList"></div>

<script src="app.js"></script>